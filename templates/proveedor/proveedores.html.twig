{% extends ('base.html.twig') %}

{% block title %}
    <title>Llista de Proveedores</title>
{% endblock %}

{% block body %}
    <h1>Hola Mundo!</h1>
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>tipoProveedor</th>
            </tr>
        </thead>
        <tbody>
            {% for user in listProveedores %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ user.nombre }}</td>
                <td>{{ user.correoElectronico }}</td>
                <td>{{ user.telefono }}</td>
                <td>{{ user.tipoProveedor }}</td>
                <td>{{ user.activo }}</td>
                <td>
                    <a href="#" class="btn btn-primary">Modificar</a>
                    <a href="#" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}